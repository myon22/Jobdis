<%= provide(:title,"メール送信用") %>

<div class="container">
  <div class="row">
    <div class="col-md-3 col-offset-6">
    <%= form_for(:reset_pass, url: password_resets_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email ,class:"form-control"%>

      <%= f.submit "メールを送信" ,class:"btn btn-primary" %>

    <% end %>
    </div>
  </div>
</div>